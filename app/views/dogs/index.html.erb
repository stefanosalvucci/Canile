<p id="notice"><%= notice %></p>

<h1>Lista Cani</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Razza</th>
      <th>Provenienza</th>
      <th>Genere</th>
      <th>Canile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.name %></td>
        <td><%= dog.breed %></td>
        <td><%= dog.provenance %></td>
        <td><%= dog.gender %></td>
        <td><%= link_to dog.dog_camp.name, dog_camp_path(dog.dog_camp_id) %></td>
        <td><%= link_to 'Mostra', dog %></td>
        <td><%= link_to 'Modifica', edit_dog_path(dog) %></td>
        <td><%= link_to 'Elimina', dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Aggiungi Cane', new_dog_path %>
